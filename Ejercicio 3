def es_primo(n: int) -> bool:#si n es primo true o flase 
    if n < 2:#los primeros son mayores o igual que 2 
        return False
    for i in range(2, int(n**0.5) + 1):#prueva divisores hasta la raiz de n 
        if n % i == 0:#si i divide a n no es primo 
            return False
    return True

def filtrar_primos(entrada: str) -> list:#combierte la entra en numeros y devuelve solo primos en una lista
    partes = entrada.replace(",", " ").split()# reemplazar comas por espacios y separar
    numeros = []
    for x in partes:
        try:
            numeros.append(int(x)) #intenta convertir los numeros a enteros 
        except ValueError:#para que evite salir error cuando haya entrada invalida 
            pass  # ignora lo que no sea número
    return [n for n in numeros if es_primo(n)]#contruye la lis es_primo 

while True:
    entrada = input("Ingrese números separados por espacios o comas (o 'salir' para terminar): ")
    if entrada.strip().lower() == "salir":
        print("Programa finalizado")
        break
    primos = filtrar_primos(entrada)
    print("Primos encontrados:", primos, "\n")
