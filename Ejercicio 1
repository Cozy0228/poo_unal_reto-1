# punto1_operaciones.py
def calcular(a, b, op):
    if op == '+':
        return a + b
    elif op == '-':
        return a - b
    elif op == '*':
        return a * b
    elif op == '/':
        if b == 0:
            raise ZeroDivisionError("División por cero")
        return a / b
    else:
        raise ValueError(f"Operador inválido: {op}")


